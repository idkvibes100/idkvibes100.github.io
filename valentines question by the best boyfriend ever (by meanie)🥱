        let noClickCount = 0;

        function reply(answer) {
            const response = document.getElementById("response");

            const noResponses = [
                "Well, thatâ€™s rude ðŸ™„",
                "Now you are just being difficult ðŸ™„",
                "You donâ€™t have a choice bud, Iâ€™m just kidding ðŸ˜‚"
            ];

            if (answer === 'Yes') {
                response.textContent = "Yippee ðŸ¥³!";
                noClickCount = 0;
            } else {
                if (noClickCount < noResponses.length) {
                    response.textContent = noResponses[noClickCount];
